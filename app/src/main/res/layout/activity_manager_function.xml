<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chadwickzhao.innofire.ManagerFunction">
    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/CreateGroup"
        android:background="@drawable/creategroup"
        android:layout_alignEnd="@+id/AssignMember"
        android:layout_alignStart="@+id/AssignMember" />
    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/AssignMember"
        android:background="@drawable/assignmember"
        android:layout_below="@+id/CreateGroup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/groupreprot"
        android:background="@drawable/showgroupreport"
        android:layout_alignTop="@+id/CreateGroup"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/showtips"
        android:layout_alignTop="@+id/AssignMember"
        android:layout_alignParentEnd="true"
        android:background="@drawable/tips"/>

</RelativeLayout>
