<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chadwickzhao.innofire.Relaxation">

    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/video"
        android:background="@drawable/video"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/imagemusic"
        android:background="@drawable/musicimage"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/breathe"
        android:background="@drawable/breathingexercise"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/video"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:id="@+id/relaxationplace"
        android:background="@drawable/gaoxiaoa"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignTop="@+id/breathe"
        android:layout_alignStart="@+id/imagemusic" />

</RelativeLayout>
